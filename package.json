{
  "name": "demozap",
  "description": "CLI tool for creating demos of React|Vue|Svelte components",
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/bin",
    "/dist",
    "/tsconfig.base.json",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "shx rm -rf dist && tsc -b tsconfig.prod.json --verbose",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "postpack": "shx rm -f oclif.manifest.json",
    "lint": "eslint --max-warnings 0 .",
    "lint-fix": "eslint --fix .",
    "lint-staged-husky": "lint-staged",
    "tsc": "tsc -p tsconfig.dev.json",
    "format-lint": "prettier --config .prettierrc --check --ignore-unknown .",
    "format-fix": "prettier --config .prettierrc --write --ignore-unknown -l .",
    "commit": "git-cz",
    "storybook": "TS_NODE_PROJECT=tsconfig.dev.json start-storybook -p 9009",
    "storybook-build": "build-storybook",
    "demozap": "npm run build && ./bin/dev generate --prefix=_ && npm run format-fix",
    "semantic-release": "semantic-release --branches main"
  },
  "bin": {
    "demozap": "./bin/run"
  },
  "oclif": {
    "bin": "demozap",
    "dirname": "demozap",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "dependencies": {
    "@oclif/core": "^1.8.1",
    "@oclif/plugin-help": "^5.1.12",
    "@oclif/plugin-plugins": "^2.1.0",
    "chalk": "^4.1.2",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.1",
    "replace-in-file": "^6.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@oclif/test": "^2.1.0",
    "@storybook/addons": "^6.5.0-beta.5",
    "@storybook/builder-webpack5": "^6.5.0-beta.5",
    "@storybook/manager-webpack5": "^6.5.0-beta.5",
    "@storybook/react": "^6.5.0-beta.5",
    "@storybook/theming": "^6.5.0-beta.5",
    "@types/eslint": "^8.4.2",
    "@types/node": "^17.0.32",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "commitizen": "^4.2.4",
    "eslint": "^8.15.0",
    "eslint-config-oclif": "^4.0.0",
    "eslint-config-oclif-typescript": "^1.0.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-no-array-reduce": "^1.0.58",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-storybook": "^0.5.11",
    "globby": "^11.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "oclif": "^3.0.1",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "react": "^18.1.0",
    "react-demo-tab": "^1.3.5",
    "react-dom": "^18.1.0",
    "sass": "^1.51.0",
    "sass-loader": "^12.6.0",
    "semantic-release": "^19.0.2",
    "shx": "^0.3.4",
    "ts-node": "^10.7.0",
    "tsc-files": "^1.1.3",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4"
  },
  "homepage": "https://mkosir.github.io/demozap",
  "bugs": "https://github.com/mkosir/demozap/issues",
  "license": "MIT",
  "author": "Marko Kosir <kosir.mar@gmail.com>",
  "repository": "mkosir/demozap",
  "keywords": [
    "react",
    "react-component",
    "demo-component",
    "demo-generator",
    "demo",
    "demozap",
    "demo-cli",
    "demo-code",
    "cli",
    "cli-tool",
    "documentation",
    "documentation-tool"
  ]
}
