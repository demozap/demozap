{
  "name": "demozap",
  "description": "CLI tool for creating demos of React|Vue|Svelte components",
  "version": "0.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/bin",
    "/dist",
    "/tsconfig.base.json",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "rm -rf dist && tsc -b tsconfig.prod.json --verbose",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "postpack": "rm -f oclif.manifest.json",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0 .",
    "lint-fix": "eslint --fix .",
    "lint-staged-husky": "lint-staged",
    "tsc": "tsc -p tsconfig.dev.json",
    "format-lint": "prettier --config .prettierrc --check --ignore-unknown .",
    "format-fix": "prettier --config .prettierrc --write --ignore-unknown -l .",
    "commit": "git-cz",
    "storybook": "TS_NODE_PROJECT=tsconfig.dev.json storybook dev -p 9009",
    "storybook-build": "storybook build -o build-storybook-static",
    "demozap": "npm run build && ./bin/dev generate --prefix=_ && npm run format-fix",
    "demozap-vue": "npm run build && ./bin/dev generate --prefix=_ --framework=vue && npm run format-fix",
    "semantic-release": "semantic-release --branches main",
    "clean": "rm -rf node_modules coverage dist compiled build-storybook-static"
  },
  "bin": {
    "demozap": "./bin/run"
  },
  "oclif": {
    "bin": "demozap",
    "dirname": "demozap",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ]
  },
  "dependencies": {
    "@oclif/core": "1.10.0",
    "@oclif/plugin-help": "5.2.4",
    "@oclif/plugin-plugins": "2.3.0",
    "chalk": "4.1.2",
    "fs-extra": "10.1.0",
    "glob": "11.0.0",
    "replace-in-file": "6.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@eslint/js": "9.14.0",
    "@storybook/addon-styling": "2.0.0",
    "@storybook/addon-webpack5-compiler-swc": "1.0.5",
    "@storybook/manager-api": "8.4.1",
    "@storybook/react": "8.4.1",
    "@storybook/react-webpack5": "8.4.1",
    "@storybook/theming": "8.4.1",
    "@types/eslint": "9.6.1",
    "@types/fs-extra": "11.0.4",
    "@types/node": "22.8.6",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "commitizen": "4.3.1",
    "eslint": "9.14.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.3",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-no-array-reduce": "1.0.62",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.37.2",
    "globby": "11.1.0",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "oclif": "3.6.3",
    "prettier": "3.3.3",
    "react": "18.3.1",
    "react-demo-tab": "1.3.16",
    "react-dom": "18.3.1",
    "sass": "1.80.6",
    "sass-loader": "16.0.3",
    "semantic-release": "24.2.0",
    "storybook": "8.4.1",
    "ts-node": "10.9.2",
    "tslib": "2.5.0",
    "typescript": "5.6.3",
    "typescript-eslint": "8.12.2"
  },
  "license": "MIT",
  "author": "Marko Kosir <kosir.mar@gmail.com>",
  "homepage": "https://mkosir.github.io/demozap",
  "repository": "mkosir/demozap",
  "bugs": "https://github.com/mkosir/demozap/issues",
  "keywords": [
    "react",
    "react-component",
    "demo-component",
    "demo-generator",
    "demo",
    "demozap",
    "demo-cli",
    "demo-code",
    "cli",
    "cli-tool",
    "documentation",
    "documentation-tool"
  ]
}
