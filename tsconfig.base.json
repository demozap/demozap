{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "baseUrl": "src",
    "paths": {
      ".": ["."]
    },
    "importHelpers": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "pretty": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "ES2020"
  },
  "exclude": ["dist", "bin"]
}
