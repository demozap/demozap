{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "baseUrl": "../src",
    "paths": {
      ".": ["."]
    },
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "moduleDetection": "force"
  },
  "include": ["../src/**/*"],
  "exclude": ["../src/**/*.test.ts"]
}
